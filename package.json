{
  "name": "blocus-helpers",
  "version": "1.0.0",
  "description": "a set of helpers to use with nodejs",
  "main": "src/index.ts",
  "scripts": {
    "build": "tsc",
    "format:check": "prettier --check \"src/**/*.{js,jsx,ts,tsx,json,md}\"",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,md}\"",
    "lint": "eslint \"src/**/*.{ts,tsx,js,jsx}\"",
    "tdd": "jest --watchAll",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/blocus/helpers.git"
  },
  "author": "Ahmed Meftah",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/blocus/helpers/issues"
  },
  "homepage": "https://github.com/blocus/helpers#readme",
  "devDependencies": {
    "@types/jest": "^29.2.6",
    "@typescript-eslint/eslint-plugin": "^5.48.2",
    "eslint": "^8.32.0",
    "jest": "^29.3.1",
    "prettier": "^2.8.3",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  }
}
